<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>BaseRequiredAuthenticationController</servlet-name>
        <servlet-class>controller.auth.BaseRequiredAuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentTimetableViewController</servlet-name>
        <servlet-class>controller.student.TimetableViewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentViewClassList</servlet-name>
        <servlet-class>controller.student.ViewClassList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LectureTimetableView</servlet-name>
        <servlet-class>controller.lecture.TimetableViewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LectureTakeTimetable</servlet-name>
        <servlet-class>controller.lecture.TimetableTakeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LectureTakeAttend</servlet-name>
        <servlet-class>controller.lecture.TakeAttendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LectureViewAttend</servlet-name>
        <servlet-class>controller.lecture.ViewAttendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeAttend</servlet-name>
        <servlet-class>controller.lecture.AttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BaseRequiredAuthenticationController</servlet-name>
        <url-pattern>/BaseRequiredAuthenticationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentTimetableViewController</servlet-name>
        <url-pattern>/student/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentViewClassList</servlet-name>
        <url-pattern>/student/classview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LectureTimetableView</servlet-name>
        <url-pattern>/lecture/viewtimetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LectureTakeTimetable</servlet-name>
        <url-pattern>/lecture/taketimetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LectureTakeAttend</servlet-name>
        <url-pattern>/lecture/take</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LectureViewAttend</servlet-name>
        <url-pattern>/lecture/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAttend</servlet-name>
        <url-pattern>/lecture/attend</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>fap/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
